<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="20dp" />
    <!-- sign in btn -->
    <!-- sign up btn -->

    <!-- password txt bx -->

    <Button
        android:id="@+id/login_btn"
        android:layout_width="344dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="68dp"
        android:text="SIGN IN"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_btn"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/sign_up_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="344dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="50dp"
        android:text="SIGN UP"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/email_txt_b"
        android:layout_width="345.43dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:alpha="0.5"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/text_white"
        app:layout_constraintBottom_toTopOf="@+id/password_txt_b"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.857" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBarPhone"
        style="@style/SpinKitView.Small.Circle"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        app:SpinKit_Color="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPhone"
        app:layout_constraintEnd_toEndOf="@+id/editTextPhone"
        app:layout_constraintTop_toTopOf="@+id/editTextPhone"
        app:layout_constraintVertical_bias="0.333" />




    <ImageView
        android:id="@+id/password_txt_b"
        android:layout_width="345.43dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.5"
        android:background="@color/text_white"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="292dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_seperator"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_btn"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintVertical_bias="0.0" />

    

    <ImageView
        android:id="@+id/mail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/email_txt_b"
        app:layout_constraintStart_toStartOf="@+id/email_txt_b"
        app:layout_constraintTop_toTopOf="@+id/email_txt_b"
        app:srcCompat="@drawable/ic_baseline_phone_24"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/password_txt_b"
        app:layout_constraintStart_toStartOf="@+id/password_txt_b"
        app:layout_constraintTop_toTopOf="@+id/password_txt_b"
        app:srcCompat="@drawable/ic_outline_lock_24"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="768dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_arrow_back" />



    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="244dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:textSize="18sp"
        android:ems="10"
        android:hint="##########"
        android:fontFamily="@font/roboto_medium"
        android:maxLength="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/email_txt_b"
        app:layout_constraintEnd_toEndOf="@+id/email_txt_b"
        app:layout_constraintTop_toTopOf="@+id/email_txt_b"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:inputType="phone"
        android:textSize="18sp"
        android:letterSpacing="1.9"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="@+id/password_txt_b"
        app:layout_constraintEnd_toEndOf="@+id/password_txt_b"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/lock_icon"
        app:layout_constraintTop_toTopOf="@+id/password_txt_b"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editTextCountry"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="+91"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/email_txt_b"
        app:layout_constraintEnd_toStartOf="@+id/editTextPhone"
        app:layout_constraintStart_toEndOf="@+id/mail_icon"
        app:layout_constraintTop_toTopOf="@+id/email_txt_b"
        tools:targetApi="p"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarPhone"
        app:layout_constraintEnd_toEndOf="@+id/progressBarPhone"
        app:layout_constraintStart_toStartOf="@+id/progressBarPhone"
        app:layout_constraintTop_toTopOf="@+id/progressBarPhone" />


</androidx.constraintlayout.widget.ConstraintLayout>